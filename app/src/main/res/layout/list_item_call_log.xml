<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/ll_root_call_log"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">

    <FrameLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp">
        <ImageView
                android:id="@+id/iv_start_icon"
                android:src="@drawable/icon"
                android:background="@drawable/icon_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <ImageView
                android:id="@+id/iv_arrow_call"
                android:background="@drawable/arrow_call_background"
                android:layout_gravity="end|bottom"
                tools:src="@drawable/arrow_outgoing"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
    </FrameLayout>


    <TextView
            android:id="@+id/tv_phone_number"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
            tools:text="+91 987 654 3210"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>
    <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    <LinearLayout
            android:gravity="right"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/tv_call_time"
                tools:text="2:55PM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_call_date"
                tools:text="01/01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>